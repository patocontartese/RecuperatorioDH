<!DOCTYPE html>
<html lang="es">

    

    <body>
      
    <article >
        <form action="/movies/create" method="POST">
                <label for="title">Titulo </label>
                <p><input type="text" name="title" id="" required></p>
                <label for="rating">Calificación </label>
                <p><input type="number" name="rating" id="" required> </p>
                <label for="awards">Premios </label>
                <p><input type="number" name="awards" id="" required></p>
                <label for="release_date">Fecha de creación </label>
                <p><input type="date" name="release_date" id="" required></p>
                <label for="length">Duración </label>
                <p><input type="number" name="length" id="" ></p>
                <label for="genreID">Género </label>
                <p>
                    <select name="genre_id" id="">
                        <option value="" disabled selected>- Seleccione el género - </option>
                        <% allGenres.forEach(genre => { %>
                        <option value="<%= genre.id %>"><%= genre.name %></option>
                        <% }); %>
                    </select>
                </p>
                <br>
                <p> <button class="botonVolver" type="submit">Agregar</button>                
                <a  class="botonVolver" href="/">Listado de Películas</a></p>
            </form>
        </article>    
</body>
</html>